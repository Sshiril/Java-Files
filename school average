package com.mycompany.test_review_2;

/**
 *
 * @author Alexander
 */
import java.util.Scanner;

public class School_Average {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner input1 = new Scanner(System.in);
        Scanner input2 = new Scanner(System.in);
        Scanner input3 = new Scanner(System.in);
        Scanner input4 = new Scanner(System.in);
        Scanner input5 = new Scanner(System.in);
        Scanner input6 = new Scanner(System.in);
        Scanner input7 = new Scanner(System.in);
        Scanner input8 = new Scanner(System.in);
        Scanner input9 = new Scanner(System.in);
        Scanner input11 = new Scanner(System.in);
        Scanner input12 = new Scanner(System.in);
        Scanner input13 = new Scanner(System.in);
        Scanner input14 = new Scanner(System.in);
        Scanner input15 = new Scanner(System.in);
        Scanner input16 = new Scanner(System.in);
        Scanner input17 = new Scanner(System.in);
         
      
      System.out.println("Enter the choices");
      System.out.println("Enter 1 for a 8 course year");
      System.out.println("Enter 2 for a 7 course year");
      int number = input1.nextInt();
       switch(number) {
           case 1:
               System.out.println("Please eneter all your course marks");
               double num1 = input2.nextDouble();
               double num2 = input3.nextDouble();
               double num3 = input4.nextDouble();
               double num4 = input5.nextDouble();
               double num5 = input6.nextDouble();
               double num6 = input7.nextDouble();
               double num7 = input8.nextDouble();
               double num8 = input9.nextDouble();
             double num10 = (num1 + num2 + num3 + num4 + num5 + num6 + num7 + num8)/8;
             System.out.println("Your average is " + num10 +"%");
             break;
          
           case 2:
               System.out.println("Please eneter all your course marks");
               double num11 = input11.nextDouble();
               double num12 = input12.nextDouble();
               double num13 = input13.nextDouble();
               double num14 = input14.nextDouble();
               double num15 = input15.nextDouble();
               double num16 = input16.nextDouble();
               double num17 = input17.nextDouble();
             double num9 = (num11 + num12 + num13 + num14 + num15 + num16 + num17)/8;
             System.out.println("you average is " + num9 + "%");
             
             break;
            
             
             default:
             System.out.println("SYSTEM ERROR." + "\n" + "please try again later");
             break;
       }
    }
    
}
