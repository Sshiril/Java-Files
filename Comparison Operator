package com.mycompany.test_review_2;

/**
 *
 * @author Alexander
 */
import java.util.Scanner;
public class Comparison_operators {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // compares two numbers
        Scanner input1 = new Scanner(System.in);
        Scanner input2 = new Scanner(System.in);
        
        System.out.println("please insert a number");
        double num1 = input1.nextDouble();
        System.out.println("Please insert a second number");
        double num2 = input2.nextDouble();
        
        if(num1==num2){
            System.out.println(num1 + " and " + num2 + " are the same");
        } else {
            System.out.println("these numbers are not the same");
        }
        
        if(num1 != num2){
            System.out.println(num1 + " and " + num2 + " are not the same");
        }else{
            System.out.println("These numbers are the same");
        }
        
        if(num1 >= num2) {
            System.out.println(num1 + " is greater than or equal to " + num2 );
        }else{
            System.out.println(num2 + " is greater than " + num1);
        }
        if(num1<= num2) {
            System.out.println(num1 + " is less than or equal to " + num2);
        } else {
            System.out.println(num2 + " is less than " + num1);
        }
        if(num1>num2){
            System.out.println(num1 + " is greater than " + num2);
        } else{
            System.out.println(num1 + " is not greater than " + num2);
        }
        if (num1<num2){
            System.out.println(num1 + " is less than " + num2);
        }else {
            System.out.println(num1 + " is not less than " + num2);
        }
    }
    
}
